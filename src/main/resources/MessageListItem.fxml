<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListCell?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>
<fx:root xmlns:fx="http://javafx.com/fxml"
         type="javafx.scene.control.ListCell"
         xmlns="http://javafx.com/javafx"
         fx:controller="com.encrypted.chat.message.list.item.MessageListItemController"
         wrapText="true">
    <graphic>
        <VBox fx:id="messageBox" visible="false">
            <Label fx:id="messageText" maxHeight="150.0" maxWidth="500.0" wrapText="true">
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </VBox.margin>
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </padding>
                <font>
                    <Font name="Roboto Regular" size="14.0"/>
                </font>
            </Label>
            <Label fx:id="messageTimestamp" alignment="CENTER_RIGHT" contentDisplay="RIGHT">
                <VBox.margin>
                    <Insets left="10.0" right="10.0"/>
                </VBox.margin>
                <font>
                    <Font name="Roboto Regular" size="12.0"/>
                </font>
            </Label>
        </VBox>
    </graphic>
</fx:root>